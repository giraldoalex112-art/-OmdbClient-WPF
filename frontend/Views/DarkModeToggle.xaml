<UserControl x:Class="OmdbClient.Views.DarkModeToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="120">
	<Grid>
		<ToggleButton x:Name="ToggleButtonTheme"
                      Content="🌙 Dark Mode"
                      Checked="ToggleButtonTheme_Checked"
                      Unchecked="ToggleButtonTheme_Unchecked"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="100"
                      Height="30"/>
	</Grid>
</UserControl>