<Window x:Class="OmdbClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OMDb Client - Login"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Campo Email -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Email"
                       Foreground="{StaticResource TextColor}"
                       FontWeight="Bold"/>
            <TextBox x:Name="EmailBox"
                     Width="300" Height="30"
                     Background="{StaticResource ControlBackground}"
                     Foreground="{StaticResource TextColor}"
                     BorderBrush="{StaticResource ControlBorder}"
                     Padding="6"
                     FontSize="14"/>
        </StackPanel>

        <!-- Campo Contraseña -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Contraseña"
                       Foreground="{StaticResource TextColor}"
                       FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox"
                         Width="300" Height="30"
                         Background="{StaticResource ControlBackground}"
                         Foreground="{StaticResource TextColor}"
                         BorderBrush="{StaticResource ControlBorder}"
                         Padding="6"
                         FontSize="14"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Login" Width="90" Height="35" Margin="5"
                    Click="Login_Click"/>
            <Button Content="Cancelar" Width="90" Height="35" Margin="5"
                    Click="Cancel_Click"/>
            <Button Content="Registrarse" Width="90" Height="35" Margin="5"
                    Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>