<Window x:Class="OmdbClient.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro - OMDb Client"
        Height="240"
        Width="380"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="16"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Campo Email -->
		<TextBlock Text="Email" FontWeight="Bold" Grid.Row="0"/>
		<TextBox x:Name="EmailBox" Grid.Row="1" MinWidth="260"/>

		<Rectangle Grid.Row="2" Height="8"/>

		<!-- Campo Contraseña (usando entidad XML para ñ) -->
		<TextBlock Text="Contrase&#241;a" FontWeight="Bold" Grid.Row="3"/>
		<PasswordBox x:Name="PasswordBox" Grid.Row="4" MinWidth="260"/>

		<Rectangle Grid.Row="5" Height="16"/>

		<!-- Botones -->
		<StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Registrar" Width="100" Margin="0,0,8,0" Click="Register_Click"/>
			<Button Content="Cancelar" Width="100" Click="Cancel_Click"/>
		</StackPanel>
	</Grid>
</Window>