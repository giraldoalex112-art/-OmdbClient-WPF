<Window x:Class="OmdbClient.Views.DetallePeliculaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Película" Height="500" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Imagen del póster -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,0,10,0">
            <Image Source="{Binding Poster}" Height="300" Stretch="Uniform"/>
        </Border>

        <!-- Información de la película -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Año:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Year}" Margin="0,0,0,10"/>

            <TextBlock Text="Género:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Genre}" Margin="0,0,0,10"/>

            <TextBlock Text="Director:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Director}" Margin="0,0,0,10"/>

            <TextBlock Text="Actores:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Actors}" Margin="0,0,0,10"/>

            <TextBlock Text="Sinopsis:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Plot}" TextWrapping="Wrap" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>