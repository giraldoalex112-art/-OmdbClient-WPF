<Window x:Class="OmdbClient.Views.BuscarPeliculasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Películas" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Barra de búsqueda -->
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
			<TextBox x:Name="TxtBusqueda" Width="400" Height="30" FontSize="14" Margin="0,0,10,0" />
			<Button x:Name="BtnBuscar" Content="Buscar" Width="100" Height="30" FontSize="14" Click="BtnBuscar_Click"/>
			<Button x:Name="BtnModoOscuro" Content="Modo oscuro" Width="120" Height="30" FontSize="14" Click="BtnModoOscuro_Click" Margin="10,0,0,0"/>
		</StackPanel>

		<!-- Resultados -->
		<StackPanel Grid.Row="1" Orientation="Vertical">
			<TextBlock x:Name="TituloTextBlock" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
			<Image x:Name="PosterImage" Height="300" Stretch="Uniform" Margin="0,0,0,10"/>
			<TextBlock x:Name="SinopsisTextBlock" TextWrapping="Wrap" FontSize="16"/>
		</StackPanel>
	</Grid>
</Window>